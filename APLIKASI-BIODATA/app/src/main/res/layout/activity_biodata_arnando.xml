            android:layout_height="48.7dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="40.3dp"
            android:background="@drawable/bg_ed_grey"
            android:gravity="center"
            android:text="Arnando Simanjuntak"
            android:textColor="#b3767575"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="48.7dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ed_grey"
            android:gravity="center"
            android:text="05 Oktober 1996"
            android:textColor="#b3767575"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="48.7dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ed_grey"
            android:gravity="center"
            android:text="Jl. Tanjung Anom Gg. Sosial Ujung No. 677"
            android:textColor="#b3767575"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48.7dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ed_grey"
            android:gravity="center"
            android:text="+62812 644 7810"
            android:textColor="#b3767575"/>


    </LinearLayout>




</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFF"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/imgBgLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/bghome"/>



        <!-- Child linear layout with horizontal orientation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imgBgLogin"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="139.9dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/pablogo"/>

            <Button
                android:onClick="arnando"
                android:layout_width="match_parent"
                android:layout_height="48.7dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="120.3dp"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:text="Arnando Simanjuntak"
                android:textColor="#fff"/>


            <Button
                android:onClick="dinil"
                android:layout_width="match_parent"
                android:layout_height="48.7dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:text="Dinil Yoevitra"
                android:textColor="#fff"/>


            <Button
                android:onClick="iqbal"
                android:layout_width="match_parent"
                android:layout_height="48.7dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:text="Mohammad Iqbal"
                android:textColor="#fff"/>


        </LinearLayout>




</RelativeLayout>